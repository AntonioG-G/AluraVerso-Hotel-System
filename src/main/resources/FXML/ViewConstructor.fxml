<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox prefHeight="837.0" prefWidth="1268.0" styleClass="main-container" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mx.antonioguerrero.aluraverso.view.AppController">
   <children>
      <VBox alignment="CENTER" prefHeight="837.0" prefWidth="837.0">
         <children>
             <Region prefHeight="837.0" prefWidth="837.0" styleClass="main-panel"/>
         </children>
      </VBox>
      <VBox alignment="CENTER" fillWidth="false" prefHeight="867.0" prefWidth="431.0" styleClass="panel-container" stylesheets="@../css/styles.css">
         <Label alignment="CENTER" contentDisplay="CENTER" text="Bienvenido a" textAlignment="CENTER" textFill="WHITESMOKE" VBox.vgrow="ALWAYS">
            <font>
               <Font name="Arial Black" size="35.0" />
            </font>
            <VBox.margin>
               <Insets top="60.0" />
            </VBox.margin>
         </Label>
         <ImageView fx:id="logo" fitHeight="135.0" fitWidth="334.0" pickOnBounds="true" preserveRatio="true" styleClass="logo" VBox.vgrow="ALWAYS">
            <VBox.margin>
               <Insets bottom="106.0" />
            </VBox.margin></ImageView>
         <VBox fx:id="form" alignment="TOP_CENTER" prefHeight="136.0" prefWidth="299.0">
            <children>
               <HBox alignment="CENTER" fillHeight="false" prefHeight="0.0" prefWidth="299.0" VBox.vgrow="ALWAYS">
                  <children>
                     <Label alignment="CENTER" contentDisplay="CENTER" graphicTextGap="0.0" text="USUARIO" textFill="WHITESMOKE" HBox.hgrow="ALWAYS">
                        <font>
                           <Font name="Arial Black" size="12.0" />
                        </font>
                        <HBox.margin>
                           <Insets right="21.0" />
                        </HBox.margin>
                     </Label>
                     <TextField fx:id="userName" prefHeight="26.0" prefWidth="0.0" HBox.hgrow="ALWAYS" />
                  </children>
               </HBox>
               <HBox alignment="BOTTOM_CENTER" fillHeight="false" prefWidth="0.0">
                  <children>
                     <Label alignment="CENTER" contentDisplay="CENTER" graphicTextGap="0.0" text="CONTRASEÑA" textFill="WHITESMOKE" HBox.hgrow="ALWAYS">
                        <font>
                           <Font name="Arial Black" size="12.0" />
                        </font>
                        <HBox.margin>
                           <Insets right="21.0" />
                        </HBox.margin>
                     </Label>
                     <PasswordField fx:id="userPassword" prefHeight="26.0" prefWidth="183.0" />
                  </children>
               </HBox>
            </children>
         </VBox>
          <Button fx:id="loginButton" alignment="CENTER" onAction="#DeployMenu" prefHeight="43.0" prefWidth="230.0" styleClass="custom-button" text="INICIAR SESIÓN" textAlignment="CENTER" translateY="6.0" VBox.vgrow="ALWAYS" />
         <Button fx:id="enterButton" alignment="CENTER" onAction="#login" prefHeight="43.0" prefWidth="230.0" styleClass="custom-button" text="ENTRAR" textAlignment="CENTER" textFill="WHITE" />

         <ImageView fx:id="user_icon" pickOnBounds="true" preserveRatio="true" styleClass="user-icon" translateY="6.0" VBox.vgrow="ALWAYS">
            <VBox.margin>
               <Insets top="4.0" />
            </VBox.margin>
         </ImageView>
         <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="66.0" prefWidth="247.0" text="Impulsado por: AluraLatam y Oracle" textAlignment="CENTER" textFill="WHITESMOKE" translateY="6.0" wrapText="true" VBox.vgrow="ALWAYS">
            <font>
               <Font name="Arial Black" size="16.0" />
            </font>
         </Label>
      </VBox>
   </children>
</HBox>
